---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="My professional portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph Meta Tags -->
    	<meta property="og:title" content={title} />
    	<meta property="og:description" content="Descubre mi trabajo y experiencia en desarrollo web y aplicaciones." />
    	<meta property="og:image" content="https://portfoli-hugo.vercel.app/images/imagenMiniatura.png" />
    	<meta property="og:url" content="https://portfoli-hugo.vercel.app" />
    	<meta property="og:type" content="website" />

		<ViewTransitions />
	</head>
	<body>
		<div class="min-h-screen bg-gray-950 text-gray-50">
			<slot />
		</div>
	</body>
</html>

