---
const skills = [
  {
    category: "Frontend",
    items: ["HTML5", "CSS3", "JavaScript", "React", "Vue.js", "Disseny Responsiu"]
  },
  {
    category: "Backend",
    items: ["Java", "C#", "PHP", "RESTful APIs", "MongoDB", "MySQL", "SQL Server", "Firebase"]
  },
  {
    category: "Tools & Altres",
    items: ["GitLab", "GitHub", "VS Code", "Docker", "AWS", "Figma"]
  }
];
---

<section id="skills" class="py-20 bg-gray-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-12">Skills & Tecnologies</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skills.map((skillGroup) => (
        <div class="bg-gray-800 rounded-lg shadow-lg p-6">
          <h3 class="text-xl font-bold mb-4 text-purple-400">{skillGroup.category}</h3>
          
          <ul class="space-y-2">
            {skillGroup.items.map((skill) => (
              <li class="flex items-center">
                <svg class="w-5 h-5 text-violet-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

