---
const education = [
  {
    degree: "CFGS Desenvolupament d'aplicacions web",
    institution: "Nicolau Copèrnic",
    location: "Terrassa, Barcelona",
    period: "2024 - 2025",
    description: "Desenvolupar, implantar i mantenir aplicacions web, amb independència del model emprat i utilitzant tecnologies específiques del costat client o servidor, garantint-ne l’accés a les dades de forma segura i complint els criteris d’accessibilitat, usabilitat i qualitat exigits pels estàndards establerts",
    // courses: ["Advanced Algorithms", "Machine Learning", "Neural Networks", "Data Visualization"]
    courses: ["PHP", "JavaScript", "HTML", "CSS", "SCSS", "RESTful APIs", "Figma"]
  },
  {
    degree: "CFGS Desenvolupament d'aplicacions multiplataforma",
    institution: "Nicolau Copèrnic",
    location: "Terrassa, Barcelona",
    period: "2022 - 2024",
    description: "Consisteix a desenvolupar, implantar, documentar i mantenir aplicacions informàtiques multiplataforma, utilitzant tecnologies i entorns de desenvolupament específics, garantint l'accés a les dades de forma segura i complint els criteris d'utilització i qualitat exigits en els estàndards establerts.",
    // courses: ["Data Structures", "Web Development", "Database Systems", "Software Engineering Principles"]
    courses: ["Java", "Springboot", "Kotlin", "Unity", "Bases de dades relacionals/non"]
  },
  {
    degree: "Batxillerat Tecnològic",
    institution: "Institut Escola Cingle",
    location: "Terrassa, Barcelona",
    period: "2019 - 2021",
    description: " ",
    courses: [" "]
  }
];
---

<section id="education" class="py-20 bg-gray-950">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Educació & Estudis</h2>
      
      <div class="space-y-8">
        {education.map((item, index) => (
          <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-4">
              <div>
                <h3 class="text-xl font-bold text-white">{item.degree}</h3>
                <p class="text-purple-400 font-medium">{item.institution}</p>
                <p class="text-gray-400">{item.location}</p>
              </div>
              <div class="mt-2 md:mt-0">
                <span class="inline-block bg-gray-700 text-gray-200 px-3 py-1 rounded-full text-sm">
                  {item.period}
                </span>
              </div>
            </div>
            
            <p class="text-gray-300 mb-4">{item.description}</p>
            
            <div>
              <h4 class="text-sm font-semibold text-gray-200 mb-2">Key Courses</h4>
              <div class="flex flex-wrap gap-2">
                {item.courses.map((course) => (
                  <span class="px-2 py-1 bg-gray-700 text-gray-200 text-xs rounded-md">
                    {course}
                  </span>
                ))}
              </div>
            </div>
            
            {index < education.length - 1 && (
              <div class="relative mt-8">
                <div class="absolute left-1/2 -ml-0.5 w-0.5 h-8 bg-gray-700"></div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

